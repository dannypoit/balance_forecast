<body style="display: -ms-flexbox; display: flex; -ms-flex-align: center; align-items: center; padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5;" class="text-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <h5 class="h5 mb-0">Balance Forecast</h5>
    <h3 class="h3 mb-3 font-weight-normal">Sign up</h3>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mb-4" %>
    
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password again", class: "form-control mb-3" %>

    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block mb-4' %>

    <%= render "devise/shared/links" %>
  <% end %>
  