<body style="display: -ms-flexbox; display: flex; -ms-flex-align: center; align-items: center; padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5;" class="text-center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <h5 class="h5 mb-0">Balance Forecast</h5>
    <h3 class="h3 mb-3 font-weight-normal">Log in</h3>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>

    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>

    <% if devise_mapping.rememberable? %>
      <div class="field checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block mb-4" %>

    <%= link_to "Sign up", new_user_registration_path, class: 'mr-4' %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot password", new_password_path(resource_name) %>
    <% end -%>
  <% end %>

</body>